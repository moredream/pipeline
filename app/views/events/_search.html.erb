<%= form_tag search_events_path, :method => :get  , :class=>'form-inline' do  %>
  <div class="form-group">
    <%= text_field_tag :q, params[:q], :class => "form-control", :placeholder=>"Keywords"  %>
  </div>
  <div class="form-group">
    <%= select_tag "tag_id", options_from_collection_for_select(offers, :id, :name,:selected=> params[:tag_id]), include_blank: true,  class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= submit_tag "Search", :name => nil ,:class => 'btn btn-default' %>
  </div>
<% end %>
