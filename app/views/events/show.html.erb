<% content_for :slidebar do %>
  <div class="article">
    <p><h3 class="text-center"><%= @event.title.titleize %></h3></p>
    <h4 class="writer text-center"> <%= @event.to_writer %></h4>
  </div>
  <div class="focal-point imagebox right-1 up-1">
    <div><%= image_tag @event.target.url(:mobile), :class =>'thumbnail' if @event.target.present? %></div>
  </div>
<% end %>

<div class="row">
  <div class="">
    <p> <%= @event.content %></p>
  </div>
  <div class="">
    <p> <%= @event.offer_list %></p>
  </div>

  <div id="vote" class="col-xs-12  col-sm-12 col-md-12">
    <%= pluralize(@event.cached_votes_up, "Like") %>
  </div>

  <div class="col-xs-12  col-sm-12 col-md-12">
  <%= link_to 'Back', :back %>
  <%= link_to 'Edit', edit_event_path(@event) if current_user?(@event.user)  %>
  <%= link_to "Like", like_event_path(@event), method: :put ,id:'btn_like', remote: true , :style => @voter.voted_up_on?(@event) ?  'display: none;' : 'display: inline;'   %>
  <%= link_to "Dislike", dislike_event_path(@event), method: :put ,id:'btn_dislike', remote: true , :style => @voter.voted_up_on?(@event) ?  'display: inlinie;' : 'display: none;'    %>
  <%= link_to pluralize(@event.comments_count, "Comment"),  event_comments_path(@event)  %>
  </div>
</div>

