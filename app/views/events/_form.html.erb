

<%= form_for  @event , :html => { :id=>'event_editor' , :multipart=>true, :class=>'form-horizontal'} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
     	<%= f.label 'Offer', :class => 'col-sm-2 control-label' %>
     	<div class="col-sm-10">
     	<%= f.collection_select :tag_list, offers, :name, :name, {}, {id:'event_tag' , multiple:true, class: 'form-control info myselect'} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label 'Destination', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title, :class => 'form-control', :placeholder=>"Title" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :target, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
      <%= image_tag(@event.target_url) if @event.target? %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :target, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
      <%= f.file_field :target, :class => '', :placeholder=>"jpg, gif, png only"%>
      <%= f.text_field :remote_target_url ,:class => 'form-control', :placeholder=>"jpg, gif, png only"%>
      <%= f.hidden_field :target_cache %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :content, :class => 'form-control', :placeholder=>"Content" , :rows=>"10"%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit nil, :class=> "btn btn-default" %>
        <%= link_to 'Cancel', events_path, :class => "btn btn-default" %>
      </div>
    </div>

<% end %>
