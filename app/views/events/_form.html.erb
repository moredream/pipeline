

<%= form_for  @event , :html => { :id=>'event_editor' , :multipart=>true, :class=>'form-horizontal'} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
     	<%= f.label 'Offer', :class => 'col-sm-2 control-label' %>
     	<div class="col-sm-10">
     	<%= f.collection_select :tag_list, offers, :name, :name, {}, {id:'event_tag' , multiple:true, class: 'form-control info myselect'} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :name, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => 'form-control', :placeholder=>"Title" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :content, :class => 'form-control', :placeholder=>"Content" , :rows=>"10"%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit nil, :class=> "btn btn-default" %>
        <%= link_to 'Cancel', articles_path, :class => "btn btn-default" %>
      </div>
    </div>

<% end %>
