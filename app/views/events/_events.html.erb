<% events.each do |event| %>
 <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="thumbnail docs-container ">
          <div class="media">
            <h4 class="media-heading"><%= link_to event.name.titleize, event , :class=>'post-title' %></h4>
            <div class="media-body">

            </div>

          </div>
          <div class="media">
            <p class="pull-left" >
             <%= image_tag( event.user.image.url(:thumb), :class=>'media-object img-circle' ,:size=>'32x32') %>
            </p>
            <h4 class="writer">
              <p><%= event.to_writer %> </p>
              <p><%= pluralize(event.comments_count, "Comment") %>
              <%= pluralize(event.cached_votes_up, "Like") %></p>
            </h4>
          </div>
      </div>
  </div>
<% end %>
