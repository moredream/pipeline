<%= form_for @guru  , :html => { :id=>'gurus_editor' , :class => 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <fieldset>
      <div class="form-group">
        <%= f.label :name, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, :class => 'form-control', :placeholder=>"the name of recommendation" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Introduction', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :content, :class => 'form-control', :placeholder=>"Brief Introdution" , :rows=>"10"%>
        </div>
      </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Request', :class=> "btn btn-default" %>
        <%= link_to 'Cancel', current_user, :class => "btn btn-default" %>
      </div>
    </div>
  </fieldset>
<% end %>
