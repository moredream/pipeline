<%= form_for @guru  , :html => { :class => 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <fieldset>
      <div class="form-group">
        <%= f.label :name, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, :class => 'form-control', :placeholder=>"name" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :account, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :account, :class => 'form-control', :placeholder=>"account" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :link, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :link, :class => 'form-control', :placeholder=>"link" %>
        </div>
      </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit nil, :class=> "btn btn-default" %>
        <%= link_to 'Cancel', current_user, :class => "btn btn-default" %>
      </div>
    </div>
  </fieldset>
<% end %>
