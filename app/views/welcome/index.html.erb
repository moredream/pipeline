  <% if user_signed_in? %>
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <%= render 'shared/loginstatus' %>
      <%= render 'shared/micropost_form' %>
    </div>
    <div class="col-xs-12 col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>

  <% else %>

  <div class="center hero-unit">
    <h1>Welcome to the Sample App</h1>

    <h2>
      This is the home page
    </h2>

    <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-large btn-primary" %>  or Sign with
    <%= link_to image_tag("facebook.png", :border => 0) , user_omniauth_authorize_path(:facebook) %> |
    <%= link_to image_tag("google.png", :border => 0) , user_omniauth_authorize_path(:google_oauth2) %>

  </div>

  <% end %>

