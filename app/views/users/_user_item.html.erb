

 <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="thumbnail docs-container ">
          <div class="media">
            <h4 class="media-heading"><%= link_to title.titleize, item , :class=>'post-title' %></h4>
            <div class="media-body">
                <% if item.image.present? %>
                  <div class="focal-point imagebox right-1 up-1">
                    <div> <%= link_to image_tag(item.image.url(:mobile), :class=> 'media-object') , item %></div>
                  </div>
                <% end %>
            </div>
          </div>
      </div>
  </div>