
<%= form_for  @user , :html => { :id=> "user_editor", :multipart=>true, :class=>'form-horizontal'} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <fieldset>
    <legend>Display</legend>
    <div class="form-group">
      <%= f.label 'Name', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :username, :class => 'form-control', :placeholder=>"User Name" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Profile Image', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
      <%= f.file_field :image, :class => '', :placeholder=>"jpg, gif, png only"%>
      <%= f.hidden_field :image_cache %>
      </div>
    </div>
    </fieldset>
    <%= f.fields_for :profile do |builder| %>
      <%= render 'users/profile_fields', f: builder %>
    <% end %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit nil, :class=> "btn btn-default" %>
        <%= link_to 'Cancel', @user, :class => "btn btn-default" %>
      </div>
    </div>

<% end %>
