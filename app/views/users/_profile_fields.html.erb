  <fieldset>
  <legend>Biography</legend>
    <div class="form-group">
      <%= f.label :bio, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :bio, :class => 'form-control', :placeholder=>"Bio" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :lab, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :lab, :class => 'form-control', :placeholder=>"Lab" %>
      </div>
    </div>
  </fieldset>

  <fieldset>

  <legend>Contact Info.</legend>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <span class='glyphicon glyphicon-home'></span>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :url, :class => 'form-control', :placeholder=>"url" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :mobile, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :mobile, :class => 'form-control', :placeholder=>"Mobile" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :twitter, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <div class="input-group" >
          <span class='input-group-addon'>http://twitter.com/</span>
          <%= f.text_field :twitter, :class => 'form-control', :placeholder=>"Twitter ID" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :linkedin, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <div class="input-group" >
          <span class='input-group-addon '>http://www.linkedin.com/in/</span>
          <%= f.text_field :linkedin, :class => 'form-control', :placeholder=>"Linkedin Profile" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Google', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <div class="input-group" >
          <span class='input-group-addon '>Hangout</span>
          <%= f.text_field :google, :class => 'form-control', :placeholder=>"Google Gmail" %>
        </div>
      </div>
    </div>

    </fieldset>

