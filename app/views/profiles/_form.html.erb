<%= form_for @profile  , :html => { :class => 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <fieldset>
    <div class="form-group">
        <span class="col-sm-2 control-label">
          <%=image_tag 'profile-home.png', :size=>'32x32' %></span>
        <div class="col-sm-10">
          <%= f.text_field :url, :class => 'form-control', :placeholder=>"url" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :twitter, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :twitter, :class => 'form-control', :placeholder=>"Twitter" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :linkedin, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :linkedin, :class => 'form-control', :placeholder=>"Linkedin" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :google, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :google, :class => 'form-control', :placeholder=>"Google" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :mobile, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :mobile, :class => 'form-control', :placeholder=>"Contact" %>
      </div>
    </div>

    <div class="form-group">
        <%= f.label :bio, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :bio, :class => 'form-control', :placeholder=>"Bio" %>
      </div>
    </div>

    <div class="form-group">
        <%= f.label :lab, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :lab, :class => 'form-control', :placeholder=>"Lab Info" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
      <%= f.file_field :image,  :placeholder=>"jpg, gif, png only"%>
      <%= f.hidden_field :image_cache %>

      </div>
    </div>
    <div class="form-group">
      <%= f.label :remote_image_url,  "or image URL", :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
      <%= f.text_field :remote_image_url, :class => 'form-control', :placeholder=>"http:// or https:// ~~~" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit nil, :class=> "btn btn-default" %>
        <%= link_to 'Cancel', profile_path(@profile.user), :class => "btn btn-default" %>
      </div>
    </div>
  </fieldset>
<% end %>
