<% articles.each do |article| %>
 <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="thumbnail docs-container ">
          <div class="media">
            <h4 class="media-heading"><%= link_to article.title.titleize, article , :class=>'post-title' %></h4>
            <div class="media-body">
                <%= truncate(article.content , length: 80) if article.content.present? %>
            </div>
          </div>
          <div class="media">
            <p class="pull-left" >
             <%= image_tag( article.user.image.url(:thumb), :class=>'media-object img-circle' ,:size=>'32x32') %>
            </p>
            <h4 class="writer">
              <p><%= article.to_writer %> </p>
              <p><%= pluralize(article.comments_count, "Comment") %>
              <%= pluralize(article.cached_votes_up, "Like") %></p>
            </h4>
          </div>
      </div>
  </div>
<% end %>


