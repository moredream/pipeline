<% content_for :slidebar do %>
  <%= render 'tag_cloud' %>
<% end %>
<h3 id="" class="page-header">Dash Board</h3>

<div class="row">
  <div class="col-xs-12 col-sm-4 col-md-4">
    <%= link_to 'New article', new_article_path ,:class => 'btn btn-default' %>
  </div>
  <div class="col-xs-12 col-sm-8 col-md-8 text-right ">
      <%= render 'search' %>
  </div>
</div>
<h3></h3>

<div  id="article" class="row">
<% articles.each do |article| %>

  <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="thumbnail docs-container ">
          <%= render partial: "article", locals: { item:  article , content: article.content } %>
      </div>
  </div>
<% end %>
</div>

