<%= form_for @article  , :html => { :multipart => true ,:class => 'form-horizontal' } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Article</legend>

    <div class="form-group">
      <%= f.label :title, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title, :class => 'form-control', :placeholer=>"Title" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :location, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :location, :class => 'form-control', :placeholer=>"Title" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :tag_list, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :tag_list, :class => 'form-control', :placeholer=>"Tags (separated by commas)" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :content, :class => 'form-control', :placeholer=>"Content" , :rows=>"10"%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :image, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :image, :class => '', :placeholer=>"Content" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit nil, :class=> "btn btn-default" %>
        <%= link_to 'Cancel', articles_path, :class => "btn btn-default" %>
      </div>
    </div>
  </fieldset>


<% end %>
