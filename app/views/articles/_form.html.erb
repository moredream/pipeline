<%= form_for @article  , :html => { :multipart => true ,:class => 'form-horizontal' } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

    <legend><%= controller.action_name.capitalize %> Article</legend>

    <div class="form-group">
      <%= f.label :title, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title, :class => 'form-control', :placeholder=>"Title" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :location, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :location, :class => 'form-control', :placeholder=>"Title" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :date, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :date, :class => 'form-control', :placeholder=>"Title" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :tag_list, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :tag_list, :class => 'form-control', :placeholder=>"Tags (separated by commas)" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :content, :class => 'form-control', :placeholder=>"Content" , :rows=>"10"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
      <%= f.file_field :image, :class => '', :placeholder=>"jpg, gif, png only"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :remote_image_url,  "or image URL", :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :remote_image_url, :class => 'form-control', :placeholder=>"Please include 'http:// or https://'" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit nil, :class=> "btn btn-default" %>
        <%= link_to 'Cancel', articles_path, :class => "btn btn-default" %>
      </div>
    </div>

<% end %>
