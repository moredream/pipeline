<% content_for :slidebar do %>
  <div class="tag_cloud">
    <%= link_to 'All', articles_path, class: "label label-info" %>
    <%  tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag.name), class: tag_class(tag.level) %>
    <% end %>
  </div>
<% end %>

<div  id="article" class="row">
<% articles.each do |article| %>

  <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="thumbnail docs-container ">
           <%= render partial: "article", locals: { article:  article } %>
      </div>
  </div>
<% end %>
</div>

<%= link_to 'New article', new_article_path ,:class => 'btn btn-default' %>




