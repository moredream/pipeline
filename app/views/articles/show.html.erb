
  <div class="row">
    <div class="col-xs-12  col-sm-12 col-md-12">
        <p><h3><%= @article.title %></h3></p>
    </div>
    <div class="col-xs-12  col-sm-12 col-md-12">
      <p> <%= @article.content %></p>
    </div>
    <div class="col-xs-12  col-sm-12 col-md-12">
        <%= image_tag @article.image.url(:mobile) %>
    </div>
    <div class="col-xs-12  col-sm-12 col-md-12">
      <%=render 'tag_items', {tags: @article.tags } %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12  col-sm-12 col-md-12">
    <%= render 'photos/photos_list' %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12  col-sm-12 col-md-12">
    <%= render "comments/comments" %>
    </div>
  </div>

  <div class="row">
      <%= render "comments/form" %>
  </div>


  <div class="row">
    <div class="col-xs-12  col-sm-12 col-md-12">
  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to "Add a Photo", new_article_photo_path(@article) %> |
  <%= link_to 'Back', articles_path %>

    </div>
  </div>

