

<%= form_for  @lab , :html => {:id=>'lab_editor' , :multipart=>true, :class=>''} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :name, :class => 'control-label' %>
      <%= f.text_field :name, :class => 'form-control', :placeholder=>"Title" %>
    </div>

    <div class="form-group">
      <%= f.label :image, :class => 'control-label' %>
      <%= f.file_field :image, :class => '', :placeholder=>"Lab URL" %>
    </div>

    <div class="form-group">
      <%= f.label :content, :class => 'control-label' %>
      <%= f.hidden_field :content, :class => 'form-control', :placeholder=>"" %>
      <article class="content solidbox" id="lab-desc"><%=raw @lab.content%></article>
    </div>

    <div class="form-group">
      <%= f.label :category_tokens, "Universities" %>
      <%= f.text_field :category_tokens ,data: {load: @lab.categories} , :class => 'form-control', :placeholder=>"Universities" %>
    </div>

    <div class="form-group">
        <%= button_tag "Update",:id=>'lab-button', :type=> 'button', :class=> "btn btn-default" %>
        <%= link_to 'Cancel', @lab, :class => "btn btn-default" %>
    </div>

<% end %>

<% content_for :javascript do %>
  <script type="text/javascript">
    grande.bind(document.querySelectorAll("article"));
  </script>
<% end %>


