
<h3 id="" class="page-header">Trending Labs & Techs.</h3>

<div  id="lab" class="row">
<% labs.each do |lab| %>
  <div class="col-xs-12  col-sm-6 col-md-6">

      <div class="thumbnail">
        <div class="media">
          <h4 class="media-heading"><%= link_to lab.name, lab %></h4>
          <div class="media-body">
              <%= link_to image_tag(lab.image.url(:mobile), :size => '200x200') ,lab  %>
          </div>
        </div>
      </div>
  </div>

<% end %>
</div>

<%= link_to 'New lab', new_lab_path ,:class => 'btn btn-default' %>
