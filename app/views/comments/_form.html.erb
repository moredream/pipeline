<%= form_for [@commentable, @comment]  , :html => { :class => '' } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group col-xs-12  col-sm-10 col-md-10">
       <%= f.text_area :content, rows:4 ,:class => 'form-control', :placeholder=>"Comments" %>
    </div>
    <div class="form-group col-xs-12  col-sm-2 col-md-2">
       <%= f.submit 'Comment', :class=> "btn btn-default fill" %>
    </div>

<% end %>
