<%= form_for [@commentable, @comment]  , :html => { :class => '' } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
       <%= f.text_area :content, rows:4 ,:class => 'form-control', :placeholder=>"Comments" %>
    </div>
    <div class="form-group">
       <%= f.submit 'Comment', :class=> "btn btn-default" %>
    </div>

<% end %>
